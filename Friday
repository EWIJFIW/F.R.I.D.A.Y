#Импорт библиотек
import speech_recognition as sr
import pyttsx3
import webbrowser as wb
from datetime import datetime
from g4f.client import Client
import requests
import subprocess

#Инициализация библиотек
recognizer = sr.Recognizer()
engine = pyttsx3.init()

#Настройка голоса
engine.setProperty('rate', 237)
engine.setProperty('volume', 0.9)
voices = engine.getProperty('voices')
engine.setProperty('voice', voices[0].id)

#Вводная фраза
print("Пятница сказала: Приветствую, чем я могу помочь?")
engine.say("Приветствую, чем я могу помочь")
engine.runAndWait()

#Код-слова
music_1 = "Музыку"
music_2 = "музыку"

time_1 = "Времени"
time_2 = "времени"

google_1 = "Гугл"
google_2 = "гугл"
google_3 = "Google"
google_4 = "google"

gpt_1 = "Пятница"
gpt_2 = "пятница"
