                #Чат GPT
                if gpt_1 in data:
                    client = Client()
                    response = client.chat.completions.create(
                        model="gpt-4o-mini",
                        messages=[{"role": "user", "content": data}],
                        web_search=False
                    )
                    print("Пятница сказала:",response.choices[0].message.content)
