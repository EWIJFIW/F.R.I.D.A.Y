#Ввод голоса в программу
while True:
        with sr.Microphone() as source:
                audio = recognizer.listen(source)
                data = recognizer.recognize_google(audio, language="ru-RU")

                print("Вы сказали:",data)

                #Музыка
                if music_1 in data:
                                print("Пятница сказала: Включаю")
                                engine.say("Включаю")
                                engine.runAndWait()
                                wb.open('https://rutube.ru/video/d3559012f6c36b97735b312f83b1df52/')
